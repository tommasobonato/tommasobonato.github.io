{% capture footer_contents %}
  &copy; Copyright {{ site.time | date: '%Y' }}
  {{ site.first_name }}
  {{ site.middle_name }}
  {{ site.last_name }}. {{ site.footer_text }}
  {% if site.impressum_path %}
    <a href="{{ site.url }}{{ site.baseurl }}{{ site.impressum_path }}">Impressum</a>.
  {% endif %}
  {% if site.last_updated %}
    Last updated: {{ 'now' | date: '%B %d, %Y' }}.
  {% endif %}
{% endcapture %}

{% if site.easter_egg %}
  <!-- Hidden starfield layer (always present) -->
  <div id="starfield" aria-hidden="true"></div>

  <!-- Tiny toggle button -->
  <a href="#" title="Toggle starfield" onclick="toggleStarfield(); return false;">ðŸŒŒ</a>

  <!-- Assets -->
  <link rel="stylesheet" href="{{ '/assets/css/space.css' | relative_url }}">
  <script src="{{ '/assets/js/space.js' | relative_url }}"></script>
{% endif %}

{% include extras.html %}


{% if site.footer_fixed %}
  <footer class="fixed-bottom" role="contentinfo">
    <div class="container mt-0">
      {{ footer_contents }}
    </div>
  </footer>
{% else %}
  <footer class="sticky-bottom mt-5" role="contentinfo">
    {% if site.newsletter.enabled %}
      {% include newsletter.liquid %}
    {% endif %}

    <div class="container">
      {{ footer_contents }}
    </div>

    {% if site.easter_egg %}
      {% include scripts/starfield.html %}
    {% endif %}
    <a href="#" title="Toggle starfield" onclick="toggleStarfield(); return false;">ðŸŒŒ</a>

  </footer>
{% endif %}
